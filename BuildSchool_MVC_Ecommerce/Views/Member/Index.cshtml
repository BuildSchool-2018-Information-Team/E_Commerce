<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    $(function () {
        $(document).on("keyup", "#p1", function () {
            console.log($("#p1").val().length);
            if ($("#p1").val().length < 8) {
                $('#p1i').html($('<i class="fas fa-times" style="color:red"></i>'));
                $("#p2").val("");
                $('#p2i').html($(''));
            }
            else {
                $('#p1i').html($('<i class="fas fa-check" style="color:green"></i>'));
                $("#p2").val("");
                $('#p2i').html($(''));
            }
        })
        $(document).on("keyup", "#p2", function () {
            console.log($("#p2").val().length);
            if ($("#p2").val() != $("#p1").val() || $("#p2").val().length < 8) {
                $('#p2i').html($('<i class="fas fa-times" style="color:red"></i>'));
            }
            else {
                $('#p2i').html($('<i class="fas fa-check" style="color:green"></i>'));
            }
        })
        $(document).on("click", "#button", function () {
            var status = 0;
            if ($("#id").val().replace(" ", "") == "") {
                status = 0;
            }
            else if ($("#p1").val().replace(" ", "") == "") {
                status = 0;
            }
            else if ($("#p2").val().replace(" ", "") == "") {
                status = 0;
            }
            else if ($("#name").val().replace(" ", "") == "") {
                status = 0;
            }
            else if ($("#email").val().replace(" ", "") == "") {
                status = 0;
            }
            else if ($("#phone").val().replace(" ", "") == "") {
                status = 0;
            }
            else if ($("#address").val().replace(" ", "") == "") {
                status = 0;
            }
            else if ($("#p1").val().length < 8) {
                status = 0;
            }
            else if ($("#p2").val().length < 8) {
                status = 0;
            }
            else if ($("#p2").val() != $("#p1").val()) {
                status = 0;
            }
            else {
                status = 1;
            }
            if (status == 0) {
                return false;
            }
            else {
                return true;
            }
        })
    })
</script>

