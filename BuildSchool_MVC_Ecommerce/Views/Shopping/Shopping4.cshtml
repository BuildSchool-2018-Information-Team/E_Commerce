                    @if (@ViewData["shopping"] as List<Shopping> == null)
                    {

                    }
                    else
                    {
                        foreach (var item in @ViewData["shopping"] as List<Shopping>)
                        {
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-3">
                                        <img src=@item.ProductImage>
                                    </div>
                                    <div class="col-4">
                                        @item.ProductName (@item.Color) (@item.Size)
                                    </div>
                                    <div class="col-2">
                                        <label>@item.Quantity</label>
                                    </div>
                                    <div class="col-2 price">
                                        $@item.UnitPrice.ToString("#0.00")
                                    </div>
                                </div>
                            </li>
                        }
