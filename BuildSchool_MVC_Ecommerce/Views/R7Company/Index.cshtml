
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Employee_Layout.cshtml";
}

@using (Html.BeginForm("Login", "R7Company"))
{
    <div class="row mt-5">
        <div class="offset-2"></div>
        <div class="col-2"><h4 class="modal-title" id="modelTitleId">員工登入</h4></div>
    </div>
    <div class="row mt-5">
        <div class="col-2 text-right">
            <label class="col-form-label text-right" for="">帳號</label>
        </div>
        <div class="col-4">
            <input type="text" class="form-control text-left" name="employeeID" id="account">
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-2 text-right">
            <label class="col-form-label text-right" for="">密碼</label>
        </div>
        <div class="col-4">
            <input type="password" class="form-control text-left" name="phone" id="password">
        </div>
    </div>
    <div class="row">
        <div class="offset-3"></div>
        <div class="col-5 mt-4">
            <button type="submit" class="btn btn-success" id="addItemBtn">登入</button>
        </div>
    </div>
}
