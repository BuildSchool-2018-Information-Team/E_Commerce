<!-- (col-9)Row of the newest Product Info -->
<div class="row mt-3 pt-2 text-white" style="background-color:#717568">
    <div class="col">
        <h5 class="">最新商品</h5>
    </div>
</div>
<div class="row mt-3">
    @foreach (var item in ViewData["newproduct"] as IEnumerable<Product>)
    {
        <div class="col-sm-4 border border-secondary">
            <div>
                <img class="product" id=@item.ProductID src=@item.ProductImage alt="Card image cap">
                <div>
                    <h5 class="mt-2 product" id=@item.ProductID>@item.ProductName</h5>
                    <a>
                        <p class="text-right product" id=@item.ProductID style="color: #3F4739">more</p>
                    </a>
                </div>
            </div>
        </div>
    }
</div>
