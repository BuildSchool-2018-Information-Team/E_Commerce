<!-- (col-9)Row of the newest Product Info -->
<div class="row mt-3">
    <div class="col">
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <label class="btn btn-secondary active">
                <input type="radio" name="options" id="option1" autocomplete="off" checked> 最新上市
            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="options" id="option2" autocomplete="off"> 熱銷產品

            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="options" id="option3" autocomplete="off"> 價格(低到高)
            </label>
        </div>
    </div>
</div>
<div class="row">
    @foreach (var item in @ViewData["productcategory"] as IEnumerable<FindProductsByCategory>)
    {
        <div class="col-sm-4 mt-4 mr-2">
            <a>
                <img class="product" id=@item.ProductID src=@item.ProductImage alt="Card image cap">
            </a>
            <div>
                <h5 class="mt-2 product" id=@item.ProductID>@item.ProductName</h5>
                @*<p>test1</p>*@
                <p class="text-right" style="color:darkred">$@item.UnitPrice.ToString("#0.00")</p>
            </div>
        </div>
    }
</div>