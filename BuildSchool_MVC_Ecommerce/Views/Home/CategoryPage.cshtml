                </label>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var item in @ViewData["productcategory"] as IEnumerable<FindProductsByCategory>)
        {
            <div class="col-sm-4 mt-4 mr-2">
                <a href="#">
                    <img class="product" name=@item.ProductID src=@item.ProductImage alt="Card image cap">
                </a>
                <div>
                    <h5 class="mt-2 product" name=@item.ProductID>@item.ProductName</h5>
                    @*<p>test1</p>*@
                    <p class="text-right" style="color:darkred">$@item.UnitPrice.ToString("#0.00")</p>
                </div>
            </div>
        }
